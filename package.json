    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:migrations": "tsx --env-file=.env ./src/database/postgres/migrateToLatest.cts",
    "db:types": "kysely-codegen --dialect postgres --camel-case --out-file ./src/shared/db/kysely-types.d.ts",
